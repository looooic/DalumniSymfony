<form method="post" action="{{ path('actu_delete', {'id': actu.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ actu.id) }}">
    <button class="btn btn-danger text-white mt-1">Delete</button>
</form>
