{% extends 'base.html.twig' %}

{% block title %}Actu{% endblock %}

{% block body %}
    <h1>Actu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actu.id }}</td>
            </tr>
            <tr>
                <th>Titreactu</th>
                <td>{{ actu.titreactu }}</td>
            </tr>
            <tr>
                <th>Photoactu</th>
                <td><img src="/uploadimg/images/{{ actu.photoactu }}" style="width: 50%; height: 50%;"></td>
            </tr>
            <tr>
                <th>Messageactu</th>
                <td>{{ actu.messageactu }}</td>
            </tr>
            <tr>
                <th>Dateactu</th>
                <td>{{ actu.dateactu ? actu.dateactu|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('actu_index') }}">back to list</a>

    <a href="{{ path('actu_edit', {'id': actu.id}) }}">edit</a>

    {{ include('actu/_delete_form.html.twig') }}
{% endblock %}

