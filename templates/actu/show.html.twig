{% extends 'base.html.twig' %}

{% block title %}Actu{% endblock %}


{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
    <div class="col text-center d-flex justify-content-center" style="background-color: whitesmoke;margin-bottom: 3rem; padding: 5rem;">
        <article>
            <h2>{{ actu.titreactu }}</h2>
            <div class="metadata">{{ actu.dateactu ? actu.dateactu|date('Y-m-d H:i:s') : '' }}</div>
            <div class="content">
                <img src="/uploadimg/images/{{ actu.photoactu }}" class="w-50 p-3 h-25 d-inline-block">
                <p class="text-justify">
                    {{ actu.messageactu }}
                </p>
            </div>
            <a href="{{ path('actu_index') }}" class="btn btn-warning text-white">Retourner à la liste</a>
            <a href="{{ path('actu_edit', {'id': actu.id}) }}" class="btn btn-secondary text-white">Editer l'article</a>
            <a href="{{ path('default') }}" class="btn btn-primary text-white">Revenir à l'accueil</a>
            {{ include('actu/_delete_form.html.twig') }}

        </article>
    </div>
    {% else %}
        {# ROLE USER #}
        <div class="col text-center d-flex justify-content-center" style="background-color: whitesmoke;margin-bottom: 3rem; padding: 1rem;">
            <article>
                <h2>{{ actu.titreactu }}</h2>
                <div class="content">
                    <img src="/uploadimg/images/{{ actu.photoactu }}" class="w-50 p-3 h-25 d-inline-block">
                    <p class="text-justify">
                        {{ actu.messageactu }}
                    </p>
                </div>
                <a href="{{ path('default') }}" class="btn btn-primary text-white">Revenir à l'accueil</a>

            </article>
        </div>
    {% endif %}
{% endblock %}
