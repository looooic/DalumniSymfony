{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td> {{ post.author ? post.author.user.prenom : 'nc' }} </td>
            </tr>
            <tr>
                <th>Champs</th>
                <td>{{ post.champs }}</td>
            </tr>
            <tr>
                <th>Datepost</th>
                <td>{{ post.datepost ? post.datepost|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <ul class="commentaire">
        {% for commentaire in commentaires %}
            <li>
                {{ commentaire.message }} <br>

                (par {{ commentaire.author.user.prenom }} le  {{ commentaire.datecom ? comment.datecom|date('d-m-Y H:i:s') }})
            </li>

        {% endfor %}

    </ul>

    <p>
        <a href="{{ path('post_add_commentaire', {'id': post.id}) }}">Ajouter un commentaire</a>
    </p>

    <button type="button" class="btn btn-warning bouton"> <a href="{{ path('post_index') }}">Retour Ã  la liste</a> </button>

    <button type="button" class="btn btn-secondary bouton"> <a href="{{ path('post_edit', {'id': post.id}) }}">editer</a> </button>

    <button type="button" class="btn btn-danger bouton"> {{ include('post/_delete_form.html.twig') }}</button>
{% endblock %}
